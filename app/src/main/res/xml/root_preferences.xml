<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pref_general_category">

        <ListPreference
            app:defaultValue="en"
            app:entries="@array/settings_language"
            app:entryValues="@array/settings_language_values"
            app:key="setting_lang"
            app:title="@string/lang_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Reminder">
        <SwitchPreferenceCompat
            app:key="setting_daily_reminder"
            app:summaryOn="Daily reminder enabled every 7 AM"
            app:title="Daily Reminder" />
        <SwitchPreferenceCompat
            app:key="setting_release_today_reminder"
            app:summaryOn="Today's Release enabled every 8 AM"
            app:title="Release Today Reminder" />
    </PreferenceCategory>

</PreferenceScreen>
